<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]ProjetoEvolucional</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoEvolucional.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar bg-white border-bottom box-shadow mb-3">
            <div class="container justify-content-center text-center">
                <a class="navbar-brand">
                    <img src="~/img/evolucional_logo.png" alt="Logo" style="height: 80px;" />
                    <span style="color:#060182;">ProjetoEvolucional</span>
                </a>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            <p style="color: white;">&copy; 2025 - ProjetoEvolucional</p>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
